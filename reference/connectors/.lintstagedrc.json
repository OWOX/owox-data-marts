{
  "**/*.{js,mjs}": [
    "eslint --config ./eslint.config.js",
    "prettier --write --config ./prettier.config.js --ignore-path ./.prettierignore"
  ],
  "**/*.json": ["prettier --write --config ./prettier.config.js --ignore-path ./.prettierignore"],
  "**/*.md": ["markdownlint-cli2 --fix --config ../../.markdownlint-cli2.mjs"]
}
